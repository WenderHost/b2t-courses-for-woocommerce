<style>
.certification-links{
  list-style: none;
  padding: 0;
}
</style>
<div class="widget course-details">
  <h3 class="widget-title">{{labels.course_details}}</h3>
  {{#if reference}}
  <div class="detail">
    <h4>{{labels.reference}}</h4>
    {{reference}}
  </div>
  {{/if}}
  {{#if duration}}
  <div class="detail">
    <h4>{{labels.duration}}</h4>
    {{duration}}
  </div>
  {{/if}}
  {{#if delivery_mode}}
  <div class="detail">
    <h4>{{labels.delivery_mode}}</h4>
    {{delivery_mode}}
  </div>
  {{/if}}
  {{#if certification_links}}
  <div class="detail">
    <h4>{{labels.certification}}</h4>
    <ul class="certification-links">
    {{#each certification_links}}
      <li><a href="{{link}}">{{text}}</a></li>
    {{/each}}
    </ul>
  </div>
  {{/if}}
  {{#if iiba_endorsed}}
  <div class="">
    <img src="{{iiba_img}}" alt="IIBA Certified Course" style="" />
  </div>
  {{/if}}
  <div class="buttons">
    <a href="#elementor-action%3Aaction%3Dpopup%3Aopen%26settings%3DeyJpZCI6IjE0OCIsInRvZ2dsZSI6ZmFsc2V9" class="button">{{labels.request_info}}</a>
    {{# if print_version}}<a href="{{print_version}}" class="print" target="_blank">Print</a>{{/if}}
  </div>
</div>